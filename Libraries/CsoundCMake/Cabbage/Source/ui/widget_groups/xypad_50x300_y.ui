
; XY pad controls 50 x 300, y axis only.

${group} bounds(0, 0, 50, 300) colour(${XYPadColor}) {

    ; X-axis line.
    ${rect} bounds(0, ${XYPadXAxisY}, 300, 2) colour(${white}, 64) visible(${XYPadXAxisVisible}) 

    ; Position indicator.
    ${rect} bounds(0, ${XYPadXAxisY}, 50, 2) identchannel("${XYPadChannelPrefix}indicator_ui") colour(${green})

    ; Mouse input.
    ${xypad} bounds(0, -14, 50, 393) channel("${XYPadChannelPrefix}inputX", "${XYPadChannelPrefix}inputY") ${XYPadRange} alpha(0)
}
