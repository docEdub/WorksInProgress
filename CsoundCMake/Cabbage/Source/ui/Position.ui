
${no_grid}

; Position enable/disable checkbox.
${group} bounds(0, 0, ${50_square}) {
   ${checkbox_50x50} channel("positionEnabled")) value(1)
}

; Settings.
${group} bounds(0, 50, 1000, 500) {

   ; Max amp when close, reference distance and rolloff factor.
   ${group} bounds(0, 0, ${setting_width}, ${setting_height_x3}) {
      ${group} bounds(0, 0, ${setting_dimensions}) {
         ${setting_label} text("Max amp when close")
         ${setting_input} channel("positionMaxAmpWhenClose") range(0, 10, 1, 0.5, 0.001)
      }
      ${group} bounds(0, ${setting_height}, ${setting_dimensions}) {
         ${setting_label} text("Reference distance")
         ${setting_input} channel("positionReferenceDistance") range(0, 10, 0.1, 0.5, 0.0001)
      }
      ${group} bounds(0, ${setting_height_x2}, ${setting_dimensions}) {
         ${setting_label} text("Rolloff factor")
         ${setting_input} channel("positionRolloffFactor") range(0.0001, 10, 0.01, 0.5, 0.0001)
      }
   }

   ; Position opcode.
   ${group} bounds(0, 100, ${setting_width}, ${setting_height_x2}) {
      ${setting_label} text("Position opcode")
      ${setting_combobox} bounds(0, ${setting_height}, ${setting_dimensions}) channel("positionOpcodeComboBoxIndex") identchannel("positionOpcodeComboBoxIndexUi") items(${CSOUND_CMAKE_POSITION_UDO_NAMES})
      ${texteditor} ${hidden} channel("positionOpcode") identchannel("positionOpcodeUi")
   }

   ; X, Y and Z offset.
   ${group} bounds(0, 175, ${setting_width}, ${setting_height_x3}) {
      ${group} bounds(0, 0, ${setting_dimensions}) {
         ${setting_label} text("X offset")
         ${setting_input} channel("positionXOffset") range(-1, 1, 0, 0.5, 0.001)
      }
      ${group} bounds(0, ${setting_height}, ${setting_dimensions}) {
         ${setting_label} text("Y offset")
         ${setting_input} channel("positionYOffset") range(-1, 1, 0, 0.5, 0.001)
      }
      ${group} bounds(0, ${setting_height_x2}, ${setting_dimensions}) {
         ${setting_label} text("Z offset")
         ${setting_input} channel("positionZOffset") range(-1, 1, 0, 0.5, 0.001)
      }
   }

   ; X, Y and Z scale.
   ${group} bounds(0, 275, ${setting_width}, ${setting_height_x3}) {
      ${group} bounds(0, 0, ${setting_dimensions}) {
         ${setting_label} text("X scale")
         ${setting_input} channel("positionXScale") range(1, 10000, 100, 0.5, 1)
      }
      ${group} bounds(0, ${setting_height}, ${setting_dimensions}) {
         ${setting_label} text("Y scale")
         ${setting_input} channel("positionYScale") range(1, 10000, 100, 0.5, 1)
      }
      ${group} bounds(0, ${setting_height_x2}, ${setting_dimensions}) {
         ${setting_label} text("Z scale")
         ${setting_input} channel("positionZScale") range(1, 10000, 100, 0.5, 1)
      }
   }
}
